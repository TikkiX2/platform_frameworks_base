<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="54dp"
    android:height="54dp">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
          android:shape="rectangle"
          android:width="42dp"
          android:height="42dp">
            <gradient android:type="linear"
                      android:startColor="@color/clock_gradient_general_gradient_start"
                      android:endColor="@color/clock_gradient_general_gradient_end"
                      android:angle="45" />
        </shape>
    </item>
    <item
      android:bottom="5dp"
      android:left="5dp"
      android:right="5dp"
      android:top="5dp">
        <bitmap xmlns:android="http://schemas.android.com/apk/res/android"
            android:gravity="fill"
            android:alpha="1"
            android:src="@*android:drawable/tikkiui_diamond_clock_bg" />
    </item>
</layer-list>
